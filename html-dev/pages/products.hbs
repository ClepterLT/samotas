{{>base/head
  bodyClasses=bodyClasses
}}

    {{>modules/header
        extraHeaderClasses=''
    }}

    <main>

        <section class="products">
            <div class="row u-flex u-justify-between u-mb-2">
                <div class="products__title">
                    <h1 class="heading heading--primary">Produktai</h1>
                </div>
                <div class="js-custom-select samotas-select">
                    <select name="product-categories" id="product-categories">
                        {{#each categories}}
                            <option value="{{title}}">{{title}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>

            <div class="row u-flex-center u-flex-wrap">
                {{#each products}}
                        {{>components/img-with-box-small}}
                {{/each}}
            </div>
        </section>

    {{>modules/cta}}

    </main>

{{>base/footer
  bodyClasses=bodyClasses
}}